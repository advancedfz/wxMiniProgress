<template name="posterTemp">
    <view class="poster-container">
        <view class="poster-auto">
            <image class="poster-auto-img" src="{{item.avatar}}"></image>
            <text class="poster-auto-time">{{item.date}}</text>
        </view>
        <text class="poster-title">{{item.title}}</text>
        <image class="poster-img" src="{{item.imgSrc}}"></image>
        <text class="poster-content">{{item.content}}</text>
        <view class="poster-like-container">
            <image class="poster-like-img" src="{{likeImgPath.likeView}}"></image>
            <text class="poster-like-num">{{item.reading}}</text>
            <image class="poster-like-img" src="{{likeImgPath.likeCollection}}"></image>
            <text class="poster-like-num">{{item.collection}}</text>
        </view>
    </view>
</template>